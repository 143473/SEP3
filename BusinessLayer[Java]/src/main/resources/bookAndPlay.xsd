<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:tns="http://spring.io/guides/gs-producing-web-service"
           targetNamespace="http://spring.io/guides/gs-producing-web-service" elementFormDefault="qualified">

    <xs:element name="SOAPRequest">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="id" type="xs:int"/>
                <xs:element name="Operation" type="tns:Operation"/>
                <xs:element name="Game" type="tns:Game"/>
                <xs:element name="User" type="tns:User"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:simpleType name="Operation">
        <xs:restriction base="xs:string">
            <xs:enumeration value="GET"/>
            <xs:enumeration value="DELETE"/>
            <xs:enumeration value="POST"/>
            <xs:enumeration value="PATCH"/>
            <xs:enumeration value="GETALL"/>
        </xs:restriction>
    </xs:simpleType>

    <xs:element name="SOAPResponse">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="Game" type="tns:Game"/>
                <xs:element name="notification" type="xs:string"/>
                <xs:element ref="tns:GameList"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:complexType name="User">
        <xs:sequence>
            <xs:element name="username" type="xs:string"/>
            <xs:element name="password" type="xs:string"/>
            <xs:element name="firstName" type="xs:string"/>
            <xs:element name="lastName" type="xs:string"/>
            <xs:element name="roleId" type="xs:int"/>
            <xs:element name="phoneCountryCode" type="xs:string"/>
            <xs:element name="phoneNumber" type="xs:string"/>
            <xs:element name="emailAddress" type="xs:string"/>
            <xs:element name="requestedPromotion" type="xs:boolean"/>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="Event">
        <xs:sequence>
            <xs:element name="id" type="xs:int"/>
            <xs:element name="name" type="xs:string"/>
            <xs:element name="startTime" type="xs:dateTime"/>
            <xs:element name="endTime" type="xs:dateTime"/>
            <xs:element name="addressStreetName" type="xs:string"/>
            <xs:element name="addressStreetNumber" type="xs:string"/>
            <xs:element name="addressApartmentNumber" type="xs:string"/>
            <xs:element name="maxNumberOfParticipants" type="xs:int"/>
            <xs:element name="numberOfParticipants" type="xs:int"/>
            <xs:element name="eventCategoryId" type="xs:int"/>
            <xs:element name="organizer" type="tns:User"/>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="MonthlyFee">
        <xs:sequence>
            <xs:element name="id" type="xs:int"/>
            <xs:element name="amount" type="xs:int"/>
            <xs:element name="startDate" type="xs:date"/>
            <xs:element name="endDate" type="xs:date"/>
            <xs:element name="userUsername" type="tns:User"/>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="OneTimeFee">
        <xs:sequence>
            <xs:element name="id" type="xs:int"/>
            <xs:element name="amount" type="xs:int"/>
            <xs:element name="eventId" type="tns:Event"/>
            <xs:element name="userUsername" type="tns:User"/>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="Game">
        <xs:sequence>
            <xs:element name="id" type="xs:int"/>
            <xs:element name="name" type="xs:string"/>
            <xs:element name="complexity" type="tns:OneTwoThreeType"/>
            <xs:element name="timeEstimation" type="tns:OneTwoThreeType"/>
            <xs:element name="minNumberOfPlayers" type="xs:int"/>
            <xs:element name="maxNumberOfPlayers" type="xs:int"/>
            <xs:element name="shortDescription" type="xs:string"/>
            <xs:element name="neededEquipment" type="xs:string"/>
            <xs:element name="minAge" type="xs:int"/>
            <xs:element name="maxAge" type="xs:int"/>
            <xs:element name="tutorial" type="xs:string"/>
            <xs:element name="approved" type="xs:boolean"/>
        </xs:sequence>
    </xs:complexType>

    <xs:element name="GameList">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="userUsername" type="tns:User"/>
                <xs:element name="gameList" maxOccurs="unbounded" minOccurs="0" type="tns:Game">
                </xs:element>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="EventGameList">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="event" type="tns:Event"/>
                <xs:element name="userUsername" type="tns:User"/>
                <xs:element name="gameList" maxOccurs="unbounded" minOccurs="0" type="tns:Game">
                </xs:element>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:simpleType name="OneTwoThreeType">
        <xs:restriction base="xs:int">
            <xs:enumeration value="1"/>
            <xs:enumeration value="2"/>
            <xs:enumeration value="3"/>
        </xs:restriction>
    </xs:simpleType>


</xs:schema>