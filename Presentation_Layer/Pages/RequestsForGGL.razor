@page "/RequestsForGGL"
@using Presentation_Layer.Models
@using Presentation_Layer.Data

@inject NavigationManager NavigationManager
@inject IGameService GameService

<h3>Requests For GGL</h3>

@if (gameList == null)
 {
     <p>
         <em>Loading...</em>
     </p>
 }
 else
 {
     @foreach (var item in gameList)
         {
             if (item.Approved == false)
             {
                 <ul>
                     <li @onclick="@(() => MoreGameInfo(item.Id))">@item.Name</li>
                 </ul>
             }
         }
 }

@code {
    private IList<Game> gameList;
    
    protected override async Task OnInitializedAsync()
    {
        gameList = await GameService.GetSuggestedGamesAsync();
    }

    private void MoreGameInfo(int id)
    {
        NavigationManager.NavigateTo($"GameApproval/{id}");
    }
}