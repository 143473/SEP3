@inject NavigationManager NavigationManager

<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Book & play</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <AuthorizeView Policy="Administrator">
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="GGL">
                    <span class="oi oi-puzzle-piece" aria-hidden="true"></span>GGL
                </NavLink>
            </li>
        </AuthorizeView>
        <AuthorizeView Policy="Administrator">
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="RequestsForGGL">
                    <span class="oi oi-circle-check" aria-hidden="true"></span>Requests for GGL
                </NavLink>
            </li>
        </AuthorizeView>
        <AuthorizeView Policy="Administrator">
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="ChangePositionRequests">
                    <span class="oi oi-pin" aria-hidden="true"></span>Organizers requests
                </NavLink>
            </li>
        </AuthorizeView>
        <AuthorizeView Policy="Administrator">
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="AllUsers">
                    <span class="oi oi-people" aria-hidden="true"></span>All users
                </NavLink>
            </li>
        </AuthorizeView>
        <AuthorizeView Policy="PlayerOrOrganizer">
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="MyEvents">
                    <span class="oi oi-task" aria-hidden="true"></span>My events
                </NavLink>
            </li>
        </AuthorizeView>
        <AuthorizeView Policy="PlayerOrOrganizer">
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="PaymentOverview">
                    <span class="oi oi-dollar" aria-hidden="true"></span>Payment Overview
                </NavLink>
            </li>
        </AuthorizeView>
        <AuthorizeView Policy="PlayerOrOrganizer">
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="ManageAccount">
                    <span class="oi oi-person" aria-hidden="true"></span>Manage account
                </NavLink>
            </li>
        </AuthorizeView>
        <AuthorizeView Policy="Organizer">
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="GameList">
                    <span class="oi oi-puzzle-piece" aria-hidden="true"></span>Game list
                </NavLink>
            </li>
        </AuthorizeView>
        <AuthorizeView Policy="PlayerOrOrganizer">
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="AllEvents">
                    <span class="oi oi-spreadsheet" aria-hidden="true"></span>All events
                </NavLink>
            </li>
        </AuthorizeView>
        
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

}